{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./src/env.d.ts"
  }
}
